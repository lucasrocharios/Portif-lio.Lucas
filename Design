        // --- FUNÇÕES GLOBAIS (Replicando Lógica React) ---
        
        function handleImageLoad(img) {
            img.classList.remove('opacity-0');
            img.classList.add('opacity-100');
            // Remove o scanner div
            const loader = img.previousElementSibling;
            if (loader && loader.classList.contains('image-loader-bg')) {
                loader.style.display = 'none';
            }
        }

        function handleImageError(e) {
            e.target.onerror = null; 
            e.target.src = "https://images.unsplash.com/photo-1634942550632-503df7749544?w=800&q=80";
            handleImageLoad(e.target);
        }

        function openLightbox(src) {
            const lightbox = document.getElementById('lightbox');
            const lightboxImg = document.getElementById('lightbox-img');
            lightboxImg.src = src;
            lightbox.classList.remove('hidden');
            // Timeout para transição suave
            setTimeout(() => {
                lightbox.classList.remove('opacity-0');
                lightbox.classList.add('opacity-100');
                lightboxImg.classList.remove('scale-95');
                lightboxImg.classList.add('scale-100');
            }, 10);
        }

        function closeLightbox() {
            const lightbox = document.getElementById('lightbox');
            const lightboxImg = document.getElementById('lightbox-img');
            lightbox.classList.remove('opacity-100');
            lightbox.classList.add('opacity-0');
            lightboxImg.classList.remove('scale-100');
            lightboxImg.classList.add('scale-95');
            setTimeout(() => {
                lightbox.classList.add('hidden');
            }, 300);
        }

        // Componente de Imagem com Scanner reconstruído como string HTML
        function renderImageWithLoaderHTML(src, alt, className, clickHandler = '') {
            return `
                <div class="image-loader-bg absolute inset-0 z-0 bg-slate-100/30 overflow-hidden pointer-events-none rounded-[inherit]">
                    <div class="w-full h-full" style="animation: scanDownWrapper 2.5s cubic-bezier(0.4, 0, 0.2, 1) infinite">
                        <div class="w-full h-[1px] opacity-70" style="background: linear-gradient(90deg, transparent 0%, rgba(0,122,255,1) 30%, rgba(255,45,85,1) 70%, transparent 100%); box-shadow: 0 0 12px rgba(0,122,255,0.4); animation: subtleColorCycle 4s linear infinite"></div>
                    </div>
                </div>
                <img src="${src}" alt="${alt}" class="${className} opacity-0 transition-all duration-500" onload="handleImageLoad(this)" onerror="handleImageError(event)" ${clickHandler ? `onclick="${clickHandler}"` : ''} style="position: relative; z-index: 1;" />
            `;
        }

        // --- SISTEMA DE NAVEGAÇÃO / RENDERIZAÇÃO ---
        function openProject(projectId, isSecondaryObj = null) {
            const proj = isSecondaryObj ? isSecondaryObj : projectsData[projectId];
            if (!proj) return;

            document.getElementById('home-view').classList.add('hidden');
            const projectView = document.getElementById('project-view');
            projectView.classList.remove('hidden');
            window.scrollTo({ top: 0, behavior: 'smooth' });

            // Layout WindowCard Base
            const WindowCardHeader = `
                <div class="bg-slate-50/80 px-4 md:px-6 lg:px-8 py-3 md:py-4 lg:py-5 flex items-center border-b border-blue-100/50 shrink-0">
                    <div class="flex space-x-2.5">
                        <div class="w-2.5 md:w-3.5 h-2.5 md:h-3.5 rounded-full bg-red-400"></div><div class="w-2.5 md:w-3.5 h-2.5 md:h-3.5 rounded-full bg-yellow-400"></div><div class="w-2.5 md:w-3.5 h-2.5 md:h-3.5 rounded-full bg-green-400"></div>
                    </div>
                </div>`;

            let htmlContent = `
                <button onclick="closeProject()" class="inline-flex items-center space-x-2 text-slate-500 hover:text-blue-600 font-bold transition-colors bg-white hover:bg-blue-50 px-6 py-3 rounded-full shadow-sm mb-4">
                    <span>Voltar ao Portfólio</span>
                </button>
            `;

            if (!proj.isSecondary) {
                // Layout de Projetos Principais
                let galleryMarquee = '';
                [...proj.gallery, ...proj.gallery].forEach((imgUrl, idx) => {
                    galleryMarquee += `
                        <div onclick="openLightbox('${imgUrl}')" class="relative w-[75vw] sm:w-[350px] md:w-[450px] lg:w-[500px] 2xl:w-[650px] h-[350px] md:h-[450px] 2xl:h-[550px] rounded-[1.5rem] md:rounded-[2.5rem] overflow-hidden shadow-lg border border-slate-100 flex-shrink-0 group cursor-zoom-in bg-slate-50 mx-2 sm:mx-4">
                            ${renderImageWithLoaderHTML(imgUrl, `Galeria ${idx}`, 'absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110')}
                        </div>`;
                });

                htmlContent += `
                    <div class="fade-in-section">
                        <div class="bg-white rounded-[2rem] md:rounded-[2.5rem] shadow-xl shadow-blue-900/5 overflow-hidden border border-blue-50 flex flex-col">
                            ${WindowCardHeader}
                            <div class="p-0 flex-1 relative flex flex-col">
                                <div class="relative h-[50vh] md:h-[60vh] min-h-[400px] w-full cursor-zoom-in group" onclick="openLightbox('${proj.heroImg}')">
                                    ${renderImageWithLoaderHTML(proj.heroImg, proj.title, 'absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-105')}
                                    <div class="absolute inset-0 bg-gradient-to-t from-slate-900/90 via-slate-900/40 to-transparent flex flex-col justify-end p-6 sm:p-10 md:p-14 lg:p-20 z-10 pointer-events-none">
                                        <div class="inline-block px-3 md:px-4 py-1.5 md:py-2 bg-blue-600/90 text-white font-bold text-xs md:text-sm rounded-full mb-4 w-max backdrop-blur-sm">${proj.category}</div>
                                        <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black text-white mb-6 md:mb-8 drop-shadow-md leading-[1.1]">${proj.title}</h1>
                                        <div class="flex flex-wrap gap-6 md:space-x-12 mt-2 md:mt-4 pt-6 md:pt-10 border-t border-white/20">
                                            <div><p class="text-[10px] md:text-xs font-bold text-slate-300 uppercase tracking-wider mb-1 md:mb-2">Meu Papel</p><p class="font-medium text-white text-base md:text-lg">${proj.role}</p></div>
                                            <div><p class="text-[10px] md:text-xs font-bold text-slate-300 uppercase tracking-wider mb-1 md:mb-2">Duração</p><p class="font-medium text-white text-base md:text-lg">${proj.timeline}</p></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="fade-in-section">
                        <div class="bg-white rounded-[2rem] md:rounded-[2.5rem] shadow-xl shadow-blue-900/5 overflow-hidden border border-blue-50 flex flex-col">
                            ${WindowCardHeader}
                            <div class="p-6 sm:p-10 md:p-14 lg:p-20 2xl:p-24 flex-1 relative">
                                <h2 class="text-2xl sm:text-3xl font-black text-slate-900 mb-6 md:mb-8 tracking-tight">Briefing Estratégico</h2>
                                <p class="text-lg md:text-xl 2xl:text-2xl text-slate-600 leading-[1.7] md:leading-[1.8] whitespace-pre-line mb-4">${proj.briefing}</p>
                            </div>
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12">
                        <div class="fade-in-section h-full">
                            <div class="bg-white rounded-[2rem] md:rounded-[2.5rem] shadow-xl shadow-blue-900/5 overflow-hidden border border-blue-50 flex flex-col h-full">
                                ${WindowCardHeader}
                                <div class="p-6 sm:p-10 md:p-14 lg:p-20 2xl:p-24 flex-1 relative">
                                    <h2 class="text-2xl sm:text-3xl font-black text-slate-900 mb-6 md:mb-8 tracking-tight">Análise de Desafios</h2>
                                    <p class="text-base md:text-lg 2xl:text-xl text-slate-600 leading-[1.7] md:leading-[1.8] mb-4">${proj.challenges}</p>
                                </div>
                            </div>
                        </div>
                        <div class="fade-in-section h-full" style="transition-delay: 100ms;">
                            <div class="bg-white rounded-[2rem] md:rounded-[2.5rem] shadow-xl shadow-blue-900/5 overflow-hidden border border-blue-50 flex flex-col h-full">
                                ${WindowCardHeader}
                                <div class="p-6 sm:p-10 md:p-14 lg:p-20 2xl:p-24 flex-1 relative">
                                    <h2 class="text-2xl sm:text-3xl font-black text-slate-900 mb-6 md:mb-8 tracking-tight">Execução da Solução</h2>
                                    <p class="text-base md:text-lg 2xl:text-xl text-slate-600 leading-[1.7] md:leading-[1.8] mb-4">${proj.solution}</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="fade-in-section">
                        <div class="bg-white rounded-[2rem] md:rounded-[2.5rem] shadow-xl shadow-blue-900/5 overflow-hidden border border-blue-50 flex flex-col">
                            ${WindowCardHeader}
                            <div class="p-6 sm:p-10 md:p-14 lg:p-20 2xl:p-24 flex-1 relative">
                                <h2 class="text-2xl sm:text-3xl font-black text-slate-900 mb-6 md:mb-8 tracking-tight">Impacto & Resultados</h2>
                                <p class="text-lg md:text-xl 2xl:text-2xl text-slate-600 leading-[1.7] md:leading-[1.8] whitespace-pre-line mb-4">${proj.result}</p>
                            </div>
                        </div>
                    </div>

                    <div class="fade-in-section">
                        <div class="bg-white rounded-[2rem] md:rounded-[2.5rem] shadow-xl shadow-blue-900/5 overflow-hidden border border-blue-50 flex flex-col">
                            ${WindowCardHeader}
                            <div class="pt-8 md:pt-14 lg:pt-20 px-0 pb-12 flex-1 relative">
                                <div class="mb-8 md:mb-10 px-6 sm:px-10 md:px-14 lg:px-20">
                                    <h2 class="text-2xl sm:text-3xl font-black text-slate-900 mb-3 md:mb-4 tracking-tight">Assets Visuais</h2>
                                    <p class="text-slate-500 text-base md:text-lg 2xl:text-xl">Clique para explorar os detalhes em alta resolução.</p>
                                </div>
                                <div class="flex overflow-hidden relative pause-on-hover py-4">
                                    <div class="flex project-marquee-left">
                                        ${galleryMarquee}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            } else {
                // Layout Secundário (Carrossel Projects)
                let scrollUpHTML = '';
                let scrollDownHTML = '';
                [...proj.gallery, ...proj.gallery, ...proj.gallery].forEach((imgUrl) => {
                    scrollUpHTML += `
                        <div onclick="openLightbox('${imgUrl}')" class="aspect-[4/5] relative rounded-[1.5rem] md:rounded-[2rem] overflow-hidden shadow-sm border border-slate-100 group cursor-zoom-in shrink-0 bg-white">
                            ${renderImageWithLoaderHTML(imgUrl, 'Visual', 'absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110')}
                            <div class="absolute inset-0 bg-blue-900/10 group-hover:bg-transparent transition-colors duration-300 z-10 pointer-events-none"></div>
                        </div>`;
                });
                [...proj.gallery, ...proj.gallery, ...proj.gallery].reverse().forEach((imgUrl) => {
                    scrollDownHTML += `
                        <div onclick="openLightbox('${imgUrl}')" class="aspect-[4/5] relative rounded-[1.5rem] md:rounded-[2rem] overflow-hidden shadow-sm border border-slate-100 group cursor-zoom-in shrink-0 bg-white">
                            ${renderImageWithLoaderHTML(imgUrl, 'Visual', 'absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110')}
                            <div class="absolute inset-0 bg-blue-900/10 group-hover:bg-transparent transition-colors duration-300 z-10 pointer-events-none"></div>
                        </div>`;
                });

                htmlContent += `
                    <div class="grid grid-cols-12 gap-3 sm:gap-6 md:gap-12 items-stretch min-h-0">
                        <div class="col-span-7 sm:col-span-5 lg:col-span-5 flex flex-col h-full">
                            <div class="fade-in-section h-full flex flex-col">
                                <div class="bg-white rounded-[1.5rem] md:rounded-[2.5rem] shadow-xl shadow-blue-900/5 overflow-hidden border border-blue-50 flex flex-col h-full flex-1">
                                    ${WindowCardHeader}
                                    <div class="p-4 sm:p-8 md:p-10 lg:p-16 2xl:p-20 flex-1 relative flex flex-col justify-center">
                                        <div class="mb-4 md:mb-8 lg:mb-10">
                                            <div class="inline-block px-2 md:px-3 py-1 md:py-1.5 bg-blue-100 text-blue-700 font-bold text-[10px] md:text-sm rounded-full mb-2 md:mb-4 lg:mb-5">${proj.category}</div>
                                            <h1 class="text-xl sm:text-3xl md:text-4xl 2xl:text-5xl font-black text-slate-900 mb-2 md:mb-3 tracking-tight leading-tight">${proj.title}</h1>
                                            <div class="h-1 md:h-1.5 w-10 md:w-16 bg-blue-600 rounded-full"></div>
                                        </div>
                                        <div class="space-y-4 md:space-y-6 lg:space-y-8">
                                            <div>
                                                <h2 class="text-[10px] md:text-sm font-bold text-slate-400 uppercase tracking-widest mb-1 md:mb-3 lg:mb-4">Resumo do Caso</h2>
                                                <p class="text-slate-600 leading-[1.5] md:leading-[1.7] lg:leading-[1.8] text-xs sm:text-sm md:text-lg lg:text-xl italic whitespace-pre-line mb-2 md:mb-4">"${proj.briefing}"</p>
                                            </div>
                                            <div class="pt-3 md:pt-6 lg:pt-8 border-t border-slate-100 grid grid-cols-1 sm:grid-cols-2 gap-3 md:gap-4 lg:gap-6">
                                                <div><p class="text-[9px] md:text-xs font-black text-slate-300 uppercase tracking-wider mb-0.5 md:mb-1 lg:mb-2">Papel</p><p class="text-xs sm:text-sm 2xl:text-base font-bold text-slate-600">${proj.role}</p></div>
                                                <div><p class="text-[9px] md:text-xs font-black text-slate-300 uppercase tracking-wider mb-0.5 md:mb-1 lg:mb-2">Status</p><p class="text-xs sm:text-sm 2xl:text-base font-bold text-slate-600">${proj.timeline}</p></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-span-5 sm:col-span-7 lg:col-span-7 relative h-[60vh] md:h-[70vh] lg:h-auto min-h-[400px] md:min-h-[500px]">
                            <div class="absolute inset-0 overflow-hidden rounded-[1.5rem] md:rounded-[2.5rem] border border-slate-100 shadow-inner bg-slate-50/50 pause-on-hover">
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-3 md:gap-6 p-3 md:p-6 h-full">
                                    <div class="relative flex flex-col gap-4 md:gap-8 animate-scroll-up">${scrollUpHTML}</div>
                                    <div class="relative hidden md:flex flex-col gap-4 md:gap-8 animate-scroll-down">${scrollDownHTML}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            }

            htmlContent += `
                <div class="fade-in-section">
                    <div class="text-center py-12 md:py-16">
                        <h3 class="text-xl sm:text-2xl 2xl:text-3xl font-bold text-slate-900 mb-6 md:mb-8 tracking-tight">Interessado neste processo criativo?</h3>
                        <a href="https://mail.google.com/mail/?view=cm&fs=1&to=lurocharios@gmail.com" target="_blank" class="inline-flex items-center space-x-3 bg-blue-600 text-white font-bold px-8 md:px-10 py-4 md:py-5 rounded-full hover:bg-blue-700 transition-all transform hover:-translate-y-1 shadow-lg shadow-blue-600/20">
                            <span class="text-base md:text-lg">Solicitar Proposta</span>
                        </a>
                    </div>
                </div>
            `;

            projectView.innerHTML = htmlContent;
            initFadeInObservers(); // Reativa observer para novos elementos injetados
        }

        function closeProject() {
            document.getElementById('project-view').classList.add('hidden');
            document.getElementById('home-view').classList.remove('hidden');
            window.scrollTo({ top: 0, behavior: 'smooth' });
            initFadeInObservers(); // Reinicia visibilidade se necessário
        }

        window.handleSelectCarouselProject = function(isRow2, index) {
            const proj = isRow2 ? row2Projects[index] : row1Projects[index];
            const detailedProj = {
                title: proj.title,
                category: proj.category || "Branding",
                heroImg: proj.img,
                role: proj.role || "Design Artístico",
                timeline: proj.timeline || "Case de Exploração",
                briefing: proj.briefing || `foi uma agência fictícia desenvolvida para um projeto acadêmico, criada com o objetivo de simular processos reais de atendimento, branding e estratégia.`,
                isSecondary: true,
                gallery: proj.gallery || []
            };
            openProject(null, detailedProj);
        };

        // --- INICIALIZAÇÃO E EFEITOS DOM ---
        function renderCarouselCard(proj, isRow2, index) {
            return `
                <div onclick="handleSelectCarouselProject(${isRow2}, ${index})" class="relative w-[70vw] sm:w-[280px] md:w-[320px] lg:w-[400px] 2xl:w-[450px] h-[200px] md:h-[220px] lg:h-[280px] 2xl:h-[320px] rounded-[1.5rem] md:rounded-[2rem] overflow-hidden group/card flex-shrink-0 shadow-lg border border-slate-100 cursor-pointer mx-3 sm:mx-4">
                    ${renderImageWithLoaderHTML(proj.img, proj.title, 'absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover/card:scale-110')}
                    <div class="absolute inset-0 bg-blue-900/70 opacity-0 group-hover/card:opacity-100 transition-opacity duration-300 flex items-center justify-center backdrop-blur-[2px] z-20">
                        <div class="text-center transform translate-y-6 group-hover/card:translate-y-0 transition-transform duration-300">
                            <h4 class="text-white text-xl sm:text-2xl font-black mb-2 md:mb-3">${proj.title}</h4>
                            <span class="inline-block px-4 md:px-5 py-2 md:py-2.5 bg-white/20 text-white text-xs md:text-sm font-bold rounded-full backdrop-blur-md">Ver Detalhes</span>
                        </div>
                    </div>
                </div>
            `;
        }

        let fadeObserver = null;
        function initFadeInObservers() {
            if(fadeObserver) fadeObserver.disconnect();
            
            fadeObserver = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('is-visible');
                        observer.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.1, rootMargin: "0px 0px -50px 0px" });

            const elements = document.querySelectorAll('.fade-in-section');
            elements.forEach(el => {
                // Remove visível (para resets se necessário) e adiciona ao observer
                if(!el.classList.contains('is-visible')) {
                    fadeObserver.observe(el);
                }
            });

            // Fallback timeout como no React original
            setTimeout(() => {
                elements.forEach(el => el.classList.add('is-visible'));
            }, 800);
        }

        document.addEventListener('DOMContentLoaded', () => {
            // Setup Imagens Iniciais Fixas com `absolute inset-0` e `object-cover` para responsividade perfeita
            document.getElementById('profile-pic-container').innerHTML = renderImageWithLoaderHTML(profilePic, "Lucas Rocha Rios", "absolute inset-0 w-full h-full object-cover object-top transition-transform duration-700 group-hover:scale-105 cursor-zoom-in", `openLightbox('${profilePic}')`);
            
            document.getElementById('revista-pg-img-container').innerHTML = renderImageWithLoaderHTML(revistaPgImages[0], "Revista PG", "absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-105", `openLightbox('${revistaPgImages[0]}')`);
            
            document.getElementById('spectro-img-container').innerHTML = renderImageWithLoaderHTML(spectroHomeImg, "Spectro", "absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-105", `openLightbox('${spectroHomeImg}')`);
            
            document.getElementById('boutiquey-img-container').innerHTML = renderImageWithLoaderHTML(boutiqueyHeroImg, "Boutiquey", "absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-105", `openLightbox('${boutiqueyHeroImg}')`);

            // Setup Carrossel
            const carouselRow1 = document.getElementById('carousel-row-1');
            const carouselRow2 = document.getElementById('carousel-row-2');
            
            let htmlRow1 = '';
            [...row1Projects, ...row1Projects].forEach((proj, i) => {
                // i % row1Projects.length para garantir o index original do array
                htmlRow1 += renderCarouselCard(proj, false, i % row1Projects.length); 
            });
            carouselRow1.innerHTML = htmlRow1;

            let htmlRow2 = '';
            [...row2Projects, ...row2Projects].forEach((proj, i) => {
                htmlRow2 += renderCarouselCard(proj, true, i % row2Projects.length);
            });
            carouselRow2.innerHTML = htmlRow2;

            document.getElementById('copyright-year').innerText = `© ${new Date().getFullYear()} Lucas Rocha Rios.`;

            // Inicializa Efeitos de Scroll
            initFadeInObservers();
        });

    </script>
</body>
</html>
